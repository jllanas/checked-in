extends ../layout

block content
  h1 Checked-In
  h2 Contacts
  img(src="#{user.picture}")
  h2 Welcome #{user.nickname}!
  br
  a(href='/logout') Logout
  br
  a(href='/home') Home
  br
  a(href='/contacts/add_new_contact') Create Contact
  ul
    each contact in contacts
      li
        each person in contact.contact
          p
            a(href="/contacts/#{contact._id}")= 'Edit'
            ,#{person.name}, #{person.phone}, #{person.email}
            a(href="/contacts/#{contact.id}/remove_contact")= 'Delete'
