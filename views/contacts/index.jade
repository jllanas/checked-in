extends ../layout

block content
  h1 Checked In
  h3 Welcome #{user.nickname}!
  br
  h2 Saved Contacts
  br
  p Add buttons for edit and delete
  br
  ul
    each contact in contacts
      each person in contact.contact
        li #{person.name} #{person.phone} #{person.email}
        a(href="/contacts/#{contact._id}")= 'Edit'                
        a(href="/contacts/#{contact.id}/remove_contact")= 'Delete'
        p
  br
  br
  a(href='/User') Home
  br
  a(href='/settings') Contact Settings
  br
  a(href='/alertsettings') Alert Settings
  br
  a(href='/logout') Logout
